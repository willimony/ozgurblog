<%= form_tag sessions_path do %>
	<fieldset>
		<legend>
			<h2>Giriş yap</h2>
		</legend>
		
		<%= label_tag :email %>
		<%= email_field_tag :email %>
		
		<%= label_tag :password, 'Parola' %>
		<%= password_field_tag :password %>
		
		<%= submit_tag 'Gönder', class: 'button [radius round]' %>
	</fieldset>
<% end %>

