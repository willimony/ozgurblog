<div class="panel panel-default">
	<div class="panel-heading">
		<ol class="breadcrumb">
			<li>
				<%= link_to @post.category.name, @post.category %>	
			</li>
			<li class="active">
				<%= link_to @post.title, @post %>	
			</li>
		</ol>
	</div>
	
	<div class="panel-body">
		<%= RedCloth.new(@post.content).to_html.html_safe %>
	</div>
	
	<div class="panel-footer">
		<%= render 'layouts/fb_sharer' %>
		
		<p class="text-right">
			<em>
				<%= link_to(@post.admin_user.username, author_path(@post.admin_user)) %>
			</em>
		</p>
	</div>
</div>
