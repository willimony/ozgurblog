<div class="col-sm-3 col-sm-offset-1 blog-sidebar">
		<div class="panel panel-warning">
			<div class="panel-heading">
				<h1 class="panel-title">ne yapalım?</h1>
			</div>

			<div class="panel-body">
				<%= render 'layouts/sharer' %>
				
				<% if user_signed_in? && current_user == @post.user %>
				<hr />

				<div class="btn-group btn-group-justified">
					<div class="btn-group">
						<%= link_to 'yazıyı düzenle', edit_post_path(@post), class: 'btn btn-warning' %>				
					</div>
					<div class="btn-group">
						<%= link_to 'yazıyı sil', post_path(@post), method: :DELETE, 
												class: 'btn btn-danger', data: {confirm: 'emin misin?'} %>
					</div>
				</div>
				<% end %>

			</div>
		</div>
</div>