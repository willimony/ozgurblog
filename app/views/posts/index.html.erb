<% @posts.each do |post| %>
  <div class="blog-post">
    <h2 class="blog-post-title"><%= link_to post.title, post %></h2>
    <p class="blog-post-meta">
      <%= I18n.l post.created_at %>
      <%= link_to post.admin_user.username, post.admin_user %>
    </p>
    
    <%= markdown(post.content).truncate(1500).html_safe %>
  </div>
<% end %>

<%= paginate @posts %>
