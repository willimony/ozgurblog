<h1>Yazılar</h1>

<table>
	<thead>
		<tr>
			<th width="700">Başlık</th>
			<th width="150">Kategori</th>
			<th>Yazar</th>
		</tr>
	</thead>
	
	<tbody>
		<% @posts.each do |p| %>
			<tr>
				<td><%= link_to p.title, p %></td>
				<td><%= link_to p.category.name, p.category %></td>
				<td><%= link_to 'Yiğit Sadıç' %></td>
			</tr>
		<% end %>	
	</tbody>
</table>